{
  "manifest_version": 3,
  "name": "Arab Stock AI Metadata Generator",
  "version": "0.0.2",
  "description": "AI-powered bilingual metadata generator for Arab Stock contributors with OpenAI & Gemini integration",
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://contributor.arabsstock.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Arab Stock Metadata Generator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://contributor.arabsstock.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}